<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BDC5B5"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/sartGame"
        android:layout_width="353dp"
        android:layout_height="552dp"
        android:layout_below="@+id/gamelogo"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="-185dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:background="@android:drawable/divider_horizontal_dark"
        android:fontFamily="@font/annie_use_your_telescope"
        android:gravity="bottom|center"
        android:padding="20dp"
        android:shadowColor="@android:color/background_dark"
        android:shadowRadius="70"
        android:text="Tap to Start"
        android:textAllCaps="false"
        android:textColor="#8C3C40"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.507" />

    <TextView
        android:id="@+id/gamelogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:fontFamily="@font/bangers"
        android:gravity="center"
        android:padding="20dp"
        android:shadowColor="#6E5252"
        android:shadowDy="50"
        android:shadowRadius="40"
        android:text="Brain Trainer"
        android:textSize="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="253dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="79dp"
        android:layout_marginLeft="79dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="79dp"
        android:layout_marginRight="79dp"
        android:layout_marginBottom="17dp"
        app:layout_constraintBottom_toTopOf="@+id/sartGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.016"
        app:srcCompat="@drawable/brain" />

    <TextView
        android:id="@+id/introTextView"
        android:layout_width="250dp"
        android:layout_height="108dp"
        android:layout_below="@+id/gamelogo"
        android:layout_alignEnd="@+id/sartGame"
        android:layout_alignRight="@+id/sartGame"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="78dp"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="58dp"
        android:layout_marginRight="58dp"
        android:layout_marginBottom="286dp"
        android:fontFamily="@font/bangers"
        android:gravity="center"
        android:shadowColor="#785F5F"
        android:shadowDy="50"
        android:shadowRadius="40"
        android:text="How much can you \n score in 30 secs?"
        android:textSize="30sp" />

</RelativeLayout>